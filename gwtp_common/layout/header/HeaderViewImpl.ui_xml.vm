<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
	ui:baseMessagesInterface="${ROOT_PKG}.client.resources.i18n.Messages">
	<ui:with field="res" type="${ROOT_PKG}.client.resources.AppResources" />

	<g:HTMLPanel ui:field="container">
		<b:Navbar position="FIXED_TOP">
			<b:Container>
				<b:Row>
					<b:Column size="MD_11">
						<b:NavbarHeader>
							<b:Image ui:field="logo" type="ROUNDED" resource="{res.logo}" addStyleNames="{res.style.clickable}" />
							<b:NavbarCollapseButton dataTarget="#navbar-collapse" />
						</b:NavbarHeader>

						<b:NavbarCollapse b:id="navbar-collapse" ui:field="collapse">
							<b:NavbarNav>
#foreach( $entity in $selectedEntities )
#set( $upperCaseEntityName = $fn.toUpperCase($entity.name))
#set( $uncapitalizedEntityName = $fn.uncapitalize($entity.name) )
	<b:AnchorListItem ui:field="${uncapitalizedEntityName}" text="${entity.name}">
		<ui:attribute name='text' key="layout.${uncapitalizedEntityName}" />
	</b:AnchorListItem>
#end
							</b:NavbarNav>
						</b:NavbarCollapse>
					</b:Column>
					<b:Column size="MD_1">
						<b:NavbarNav>
							<g:HTMLPanel ui:field="spinner" visible="false">
								<div class="{res.style.spinner}">
									<div class="{res.style.bounce1}" />
									<div class="{res.style.bounce2}" />
									<div class="{res.style.bounce3}" />
								</div>
							</g:HTMLPanel>
						</b:NavbarNav>
					</b:Column>
				</b:Row>
			</b:Container>
		</b:Navbar>
	</g:HTMLPanel>
</ui:UiBinder>
